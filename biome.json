{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error"
      },
      "nursery": {
        "noSecrets": "error",
        "useExplicitType": "error",
        "useSortedClasses": "warn"
      },
      "style": {
        "useBlockStatements": "off",
        "useImportType": "off",
        "useDefaultSwitchClause": "error"
      },
      "suspicious": {
        "noConsole": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    },
    "globals": ["$", "_", "externalVariable", "describe", "beforeEach", "it", "expect"]
  }
}
